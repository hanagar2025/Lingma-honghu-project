{
  "name": "stock-decision-app",
  "version": "1.0.0",
  "description": "智能股票决策小程序",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "dev:alipay": "npm run dev:alipay --prefix frontend/honghu-alipay",
    "build:alipay": "npm run build:alipay --prefix frontend/honghu-alipay",
    "test:frontend": "npm test --prefix frontend/honghu-alipay",
    "test:backend": "npm test --prefix backend"
  },
  "workspaces": [
    "backend",
    "frontend",
    "frontend/*"
  ],
  "keywords": [
    "stock",
    "trading",
    "decision",
    "ai",
    "portfolio"
  ],
  "author": "Stock Decision Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
